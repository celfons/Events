{
  "name": "events",
  "version": "1.0.0",
  "description": "Plataforma de Eventos com Node.js, MongoDB e Clean Architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node src/server.js",
    "seed": "node seed.js",
    "create-superuser": "node create-superuser.js",
    "create-default-user": "node create-default-user.js",
    "build:react": "webpack --mode production",
    "build:react:dev": "webpack --mode development",
    "build": "npm run build:react",
    "prebuild": "echo 'Starting build process...'",
    "postbuild": "echo 'Build completed successfully'",
    "clean": "rm -rf public/js/react-build coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"*.js\"",
    "prepare": "husky",
    "ci:install": "npm ci --no-audit --no-fund",
    "ci:build": "npm run build:react",
    "ci:test": "npm run test:coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/app.js",
      "!src/infrastructure/database/connection.js",
      "!src/infrastructure/web/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/__tests__/**/*.test.jsx",
      "**/?(*.)+(spec|test).js",
      "**/?(*.)+(spec|test).jsx"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "test-helper.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@exodus/bytes)/)"
    ],
    "testTimeout": 30000,
    "maxWorkers": 1
  },
  "keywords": [
    "events",
    "nodejs",
    "mongodb",
    "clean-architecture",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-pino-logger": "^7.0.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "babel-loader": "^10.0.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "mongodb-memory-server": "^11.0.1",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "supertest": "^7.2.2",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
